<div class="card">
    <h1>Login</h1>
    <input class="text-field" placeholder="Enter Email" type="text" value={{this.email}} {{on "input"
        this.updateEmail}} />
    <input class="text-field" placeholder="Enter Password" type="password" value={{this.password}} {{on "input"
        this.updatePassword}} />
    <p>
        Don't have an account?
        {{!-- Ember's link-to helper to navigate to signup route --}}
        <a href="" {{on "click" this.transitionToSignup}}>Create an account</a>
    </p>
    <button class="button" type="button" {{on "click" this.login}}>Login</button>
</div>